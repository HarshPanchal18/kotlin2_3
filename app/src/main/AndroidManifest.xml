        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kotlin2_3"
        tools:targetApi="31">
        <!--        <activity
                    android:name=".HobbiesActivity"
                    android:exported="false" />-->
        <activity
            android:name="com.example.kotlin2_3.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.kotlin2_3.activities.secondActivity" />
        <activity android:name="com.example.kotlin2_3.activities.HobbiesActivity" />

